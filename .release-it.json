{
    "npm": false,
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagName": "${version}"
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      },
      "@release-it/bumper": {
        "in": "pubspec.yaml",
        "out": [
            "pubspec.yaml",
            "README.md"
        ]
      }
    },
    "hooks": {
        "before:git:init": "flutter pub publish --dry-run",
        "after:release": "flutter pub publish --force"
    }
  }